@model LoginModel
@{
    ViewBag.Title = @Localizer["Home_Login_Title"];
}

<h1>@Localizer["Home_Login_Title"]</h1>

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "pure-form pure-form-aligned" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, Localizer["Home_Login_Failed"].Value, null)

    <fieldset>
        <div class="pure-control-group">
            @Html.RequiredLabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { autofocus = "" })
            @Html.ValidationMessageFor(m => m.Username)
        </div>
        <div class="pure-control-group">
            @Html.RequiredLabelFor(m => m.Password, new { accesskey = "p" })
            @Html.PasswordFor(m => m.Password, new { @class = "textInput small" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="pure-control-group">
            @Html.LabelFor(m => m.RememberMe)
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.ValidationMessageFor(m => m.RememberMe)
        </div>
        @Html.HiddenFor(m => m.ReturnUrl)
        @if (Model.DatabaseResetCode != 0)
        {
            @Html.TextBoxFor(m => m.DatabaseResetCode)
        }
        <div class="pure-controls">
            <button type="submit" class="pure-button pure-button-primary"><i class="fa fa-sign-in"></i> @Localizer["Home_Login_Login"]</button>
        </div>
        <div class="pure-controls">
            @Html.ActionLink(Localizer["Home_Login_ForgotPassword"].Value, "ForgotPassword")
        </div>
    </fieldset>
}
