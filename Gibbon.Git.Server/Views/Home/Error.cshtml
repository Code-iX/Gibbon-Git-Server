@{
    var statusCode = ViewContext.HttpContext.Response.StatusCode;

    ViewBag.Title = statusCode switch
    {
        401 => Resources.Home_Unauthorized_Title,
        403 => Resources.Home_PageNotFound_Title,
        404 => Resources.Home_PageNotFound_Title,
        500 => Resources.Home_ServerError_Title,
        _ => Resources.Home_Error_Title
    };
}

<h1>
    @ViewBag.Title
</h1>

<div>
    <p class="summary-error">
        @switch (statusCode)
        {
            case 401:
                @Resources.Home_Unauthorized_Text
                break;
            case 403:
                <text>Forbidden</text>
                break;
            case 404:
                @Resources.Home_PageNotFound_Text
                break;
            case 500:
                @Resources.Home_ServerError_Text
                break;
            default:
                @Resources.Home_Error_Text
                break;
        }
    </p>
</div>