@model Gibbon.Git.Server.Models.MeSettingsModel
@{
    Layout = "~/Views/Account/_Layout.cshtml";
    ViewBag.Title = Localizer["Settings_Index_Title"];
}

@Html.SummaryMessage("UpdateSuccess", Localizer["Settings_Index_UpdateSuccess"].Value)
@Html.SummaryMessage("ResetSuccess", Localizer["Settings_Index_ResetSuccess"].Value)

@using (Html.BeginForm("Settings", "Account", FormMethod.Post, new { @class = "pure-form pure-form-aligned" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, Localizer["Settings_Index_Failed"].Value, null)

    <fieldset>

        <div class="pure-control-group">
            @Html.LabelFor(m => m.PreferredLanguage)
            @Html.DropDownListFor(m => m.PreferredLanguage, Model.AvailableLanguages, new { @class = "medium", autofocus = "" })
            <i class="fa fa-info-circle" title="@Localizer["Settings_Global_DefaultLanguage_Hint"]"></i>
        </div>

        <div class="pure-controls">
            <button type="submit" class="pure-button pure-button-primary">
                <i class="fa fa-save"></i>@Localizer["Settings_Index_Save"]
            </button>
        </div>
    </fieldset>

}