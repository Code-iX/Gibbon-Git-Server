@using Gibbon.Git.Server.Security
@model Gibbon.Git.Server.Models.UserDetailModel
@{
    ViewBag.Title = @Localizer["Account_Detail_Title"];
}
@if (Model == null)
{
    @await Html.PartialAsync("~/Views/Shared/_ItemNotFound.cshtml")
    return;
}
<h1>@Model.Username</h1>

<div class="pure-form pure-form-aligned detail">
    <fieldset>
        <div class="pure-control-group">
            @Html.LabelFor(m => m.Username)
            <span>@Model.Username</span>
        </div>
        <div class="pure-control-group">
            @Html.LabelFor(m => m.Name)
            <span>@Model.Name</span>
        </div>
        <div class="pure-control-group">
            @Html.LabelFor(m => m.Surname)
            <span>@Model.Surname</span>
        </div>
        <div class="pure-control-group">
            @Html.LabelFor(m => m.Email)
            <span>@Model.Email</span>
        </div>
        <div class="pure-control-group">
            @Html.LabelFor(m => m.Roles)
            <span>
                @string.Join(", ", Model.Roles)
            </span>
        </div>
    </fieldset>
    <div class="pure-controls">
        @if (User.IsInRole(Roles.Admin))
        {
            <a class="pure-button" href="@Url.Action("Index")"><i class="fa fa-long-arrow-left"></i> @Localizer["Account_Detail_Back"]</a>
        }
        @if (User.IsInRole(Roles.Admin))
        {
            <a class="pure-button" href="@Url.Action("Edit", new { username = Model.Username })"><i class="fa fa-pencil-square-o"></i> @Localizer["Account_Detail_Edit"]</a>
            <a class="pure-button" href="@Url.Action("Delete", new { username = Model.Username })"><i class="fa fa-trash-o"></i> @Localizer["Account_Detail_Delete"]</a>
        }
    </div>
</div>
