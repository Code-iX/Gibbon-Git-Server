@model Gibbon.Git.Server.Models.UserCreateModel
@{
    ViewBag.Title = Localizer["Account_Create_Title"];
}

<h1>@Localizer["Account_Create_Title"]</h1>

@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @class = "pure-form pure-form-aligned" }))
{    
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, Localizer["Account_Create_Unsuccessfull"].Value, null)
    
    <fieldset> 
        <div class="pure-control-group">
            @Html.RequiredLabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { autofocus = "" })
            @Html.ValidationMessageFor(m => m.Username)
        </div> 
        <div class="pure-control-group">
            @Html.RequiredLabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div> 
        <div class="pure-control-group">
            @Html.RequiredLabelFor(m => m.Surname)
            @Html.TextBoxFor(m => m.Surname)
            @Html.ValidationMessageFor(m => m.Surname)
        </div> 
        <div class="pure-control-group">
            @Html.RequiredLabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "medium" })
            @Html.ValidationMessageFor(m => m.Email)
        </div> 
        <div class="pure-control-group">
            @Html.RequiredLabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </div> 
        <div class="pure-control-group">
            @Html.RequiredLabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword)
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div> 

        <div class="pure-controls">
            <a class="pure-button" href="@Url.Action("Index")"><i class="fa fa-long-arrow-left"></i> @Localizer["Account_Detail_Back"]</a>
            <button type="submit" class="pure-button pure-button-primary"><i class="fa fa-save"></i> @Localizer["Account_Create_Submit"]</button>
        </div>
    </fieldset>
}
