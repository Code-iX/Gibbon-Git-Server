@{
    var path = ViewData["path"] as string;
}

<p class="breadcrumbs">
    <em>@Html.ActionLink(Localizer["Repository_AddressBar_Root"].Value, "Tree", new { name = Model.Name, path = "", version =  (string)ViewData["ReferenceName"] })</em>
    @if (path != null)
    {
        <text>/</text>
        var dirs = path.Split('/');
        for (var i = 0; i < dirs.Length; i++)
        {
            var currentPath = string.Empty;
            for (var j = 0; j < i; j++)
            {
                currentPath += dirs[j] + "/";
            }
            currentPath += dirs[i];

            if (new[] { "Blame", "Blob" }.Contains((string)ViewContext.RouteData.Values["Action"]) && i + 1 == dirs.Length)
            {
                <em>@dirs[i]</em>
            }
            else
            {
                @Html.ActionLink(dirs[i], "Tree", new { name = Model.Name, path = currentPath, version = (string)ViewData["referenceName"] })
            }

            if (i + 1 != dirs.Length)
            {
                <text>/</text>
            }
        }
    }
</p>