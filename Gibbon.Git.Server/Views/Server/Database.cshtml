@model ServerDatabaseModel
@{
    Layout = "~/Views/Server/_ServerLayout.cshtml";
    ViewBag.Title = "Database";
}


<div class="pure-form pure-form-aligned detail">
    <fieldset>
        <div class="pure-control-group">
            @Html.LabelFor(m => m.DatabasePath)
            <span>@Model.DatabasePath</span>
        </div>
        <div class="pure-control-group">
            @Html.LabelFor(m => m.DatabaseSize)
            <span>@(Model.DatabaseSize / 1024) KB</span>
        </div>
    </fieldset>
</div>
